@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>List of engineers</h1>

@if (@Model.Count == 0)
{
  <h3>No Engineers have been added to application yet!</h3>
} 

@foreach (Engineer element in Model)
{
  <li>@Html.ActionLink($"{element.EngineerName}", "Details", new { id = element.EngineerId })</li>
}

@* <p>@Html.ActionLink("Add a new engineer", "Create")</p> *@

<input type="button" value="Add new engineer" onclick="location.href='@Url.Action("Create", "Engineers")'" />

