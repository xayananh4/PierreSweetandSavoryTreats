@{
  Layout = "_Layout";
}

@using Pierre.Models;

<h4>List of flavors</h4>

@if (@Model.Count == 0)
{
  <h4>No flavors have been added to this application yet!</h4>
} 

@foreach (Flavor element in Model)
{
  <li>@Html.ActionLink($"{element.FlavorName}", "Details", new { id = element.FlavorId })</li>
}

<input type="button" value="Add a new flavor" onclick="location.href='@Url.Action("Create", "Flavors")'" />

