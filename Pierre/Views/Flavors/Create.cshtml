@{
  Layout = "_Layout";
}

@model Pierre.Models.Flavor

<h4>Add a new flavor to this app</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.FlavorName)
  @Html.TextBoxFor(model => model.FlavorName)
  <p>@Html.ValidationMessageFor(model => model.FlavorName, "",
  new { @class = "text-danger", @style = "font-weight: 600;" })</p>


  <input type="submit" value="Add this flavor" class="btn btn-primary" />
}
<p>@Html.ActionLink("Show all the flavors", "Index")</p>