@{
  Layout = "_Layout";
}

@using Pierre.Models;

<h4>List of treats</h4>

@if (@Model.Count == 0)
{
  <h4>There are no treats in this application.</h4>
} 

@foreach (Treat element in Model)
{
  <li>@Html.ActionLink($"{element.TreatName}", "Details", new { id = element.TreatId })</li>
}

<input type="button" value="Add a new treat" onclick="location.href='@Url.Action("Create", "Treats")'" />

